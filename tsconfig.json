{
  "compilerOptions": {
    "lib": ["ES2015"],
    "downlevelIteration": true,
    "module": "CommonJS",
    "target": "ES2015",
    "sourceMap": true,
    "importHelpers": true,
    "types": ["@types/node"],
    "outDir": "./.tested",

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strict": true,

    "pretty": true
  },
  "include": ["src/**/*.ts", "examples/*.ts", "tests/**/*.ts", "specs/**/*.ts"]
}
